        <Button x:Name="remote_button_right" Content="Right" HorizontalAlignment="Left" Margin="201,215,0,0" VerticalAlignment="Top" Click="remote_button_right_Click"/>
        <Button x:Name="remote_button_down" Content="Down" HorizontalAlignment="Left" Margin="121,252,0,0" VerticalAlignment="Top" Click="remote_button_down_Click"/>
        <Button x:Name="remote_button_back" Content="Back" HorizontalAlignment="Left" Margin="31,262,0,0" VerticalAlignment="Top" Click="remote_button_back_Click"/>
        <Button x:Name="remote_button_toggle_gui" Content="Toggle GUI" HorizontalAlignment="Left" Margin="256,133,0,0" VerticalAlignment="Top" Click="remote_button_toggle_gui_Click"/>

    </Grid>
</Page>
